<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.enduser.myapplication.CondicionesClimaticasActivity">

    <TextView android:text="Veracruz" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ciudad"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView_ciudad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain"
        android:id="@+id/condicion"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain"
        android:id="@+id/condicion_descripcion"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/condicion"
        android:layout_toStartOf="@+id/condicion" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="18 C"
        android:gravity="center"
        android:id="@+id/textView_temperatura_actual"
        android:layout_below="@+id/textView_ciudad"
        android:layout_alignRight="@+id/textView_ciudad"
        android:layout_alignEnd="@+id/textView_ciudad"
        android:layout_above="@+id/condicion_descripcion"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: "
        android:id="@+id/textView_temperatura_minima"
        android:layout_below="@+id/textView_temperatura_actual"
        android:layout_alignLeft="@+id/textView_temperatura_actual"
        android:layout_alignStart="@+id/textView_temperatura_actual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max:"
        android:id="@+id/textView_temperatura_maxima"
        android:layout_below="@+id/textView_temperatura_actual"
        android:layout_alignRight="@+id/textView_ciudad"
        android:layout_alignEnd="@+id/textView_ciudad" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humedad"
        android:id="@+id/textView6"
        android:layout_below="@+id/condicion_descripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_humedad"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nubosidad"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView_humedad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_nubosidad"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:editable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viento"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView_nubosidad"
        android:layout_alignRight="@+id/condicion"
        android:layout_alignEnd="@+id/condicion" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_viento"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="false"/>

</RelativeLayout>
